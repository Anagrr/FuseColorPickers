<StackPanel ux:Class="CP.HexColorDisplay" Alignment="Center" Orientation="Horizontal" ItemSpacing="20">
    <string ux:Property="Color"/>

    <Rectangle CornerRadius="10" Color="{ReadProperty Color}" Size="30" Margin="0, 10">
        <DropShadow />
    </Rectangle>
    <Text TextAlignment="Center" Width="80" Alignment="VerticalCenter" Value="{ReadProperty Color}" TextWrapping="Wrap"/>
</StackPanel>