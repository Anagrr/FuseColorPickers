<StackPanel ux:Class="CP.HexColorDisplay" Alignment="Center" Orientation="Horizontal" ItemSpacing="20">
    <float4 ux:Property="HexColor"/>
    <string ux:Property="HexColorString"/>

    <Rectangle CornerRadius="10" Color="{ReadProperty HexColor}" Size="30" Margin="0, 10">
        <DropShadow />
    </Rectangle>
    <Text TextAlignment="Center" Width="80" Alignment="VerticalCenter" Value="{ReadProperty HexColorString}" TextWrapping="Wrap"/>
</StackPanel>